<% include partials/header %>
<div class = "container">
	<div class = "col-md-3">
		<h4>YelpCamp</h4>
		<ul class="list-group">
			<li class="list-group-item active">First item</li>
			<li class="list-group-item">Second item</li>
			<li class="list-group-item">Third item</li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class = "thumbnail" style="padding: 0">
			<img src="<%= campgrounds.image %>" style="width:100%">
			<div class="pull-right"><strong>$9.00/night</strong></div>
			<a><%= campgrounds.name %></a>
			<p><%= campgrounds.description %></p>
		</div>
		<div class = "well">
			<div class="pull-right">
				<a class="btn btn-success" href = "/campgrounds/<%= campgrounds._id%>/comments/new">Leave a Review</a>
			</div>
			<br>
			<hr>
			<div>
				<% campgrounds.comments.forEach(function(comment){ %>
					<div class="pull-left"><strong><%= comment.author %></strong></div>	
					<div class="pull-right">10 days ago</div>	
					<br>
					<p><%= comment.text %></p>
				<% }) %>
			</div>
		</div>
	</div>
</div>
<h1></h1>







<% include partials/footer %>