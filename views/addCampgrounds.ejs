<% include partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Add new camp ground </h1>
        <div style = "width: 30%; margin: auto;     margin-top: 25px;">
            <form action="/campgrounds" method="POST">
                <div class="form-group" >
                    <input type="text" class="form-control" id="name" placeholder="Name of campground">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="image" placeholder="Image Address">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div>   
        <br>
        <a class="btn btn-primary" href="/campgrounds">Go Back</a>
    </div>
</div>
