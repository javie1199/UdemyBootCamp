<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Edit <%= campground.name %> </h1>
        <div style = "width: 30%; margin: auto;     margin-top: 25px;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group" >
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name%>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                    <a class="btn btn-primary" href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>