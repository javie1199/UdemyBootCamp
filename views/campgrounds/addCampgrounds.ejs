<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Add new camp ground </h1>
        <div style = "width: 30%; margin: auto;     margin-top: 25px;">
            <form action="/campgrounds" method="POST">
                <div class="form-group" >
                    <input type="text" class="form-control" name="name" placeholder="Name of campground">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image Address">
                </div>
                  <div class="form-group">
                    <textarea type="text" class="form-control" name="location" placeholder="Location: Winnipeg, MB"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="description" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                    <a class="btn btn-primary" href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>