<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Add new camp ground </h1>
        <div style = "width: 30%; margin: auto;     margin-top: 25px;">
            <form action="/campgrounds" method="POST">
                <div class="form-group" >
                    <label for="name">Name of Campground</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label for="image">Image Address Link</label>
                    <input type="text" class="form-control" name="image">
                </div>
                  <div class="form-group">
                    <label for="location">Location</label>
                    <textarea type="text" class="form-control" name="location" placeholder="Winnipeg, MB"></textarea>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea type="text" class="form-control" name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                    <a class="btn btn-primary" href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>